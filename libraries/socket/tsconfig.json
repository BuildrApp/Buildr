{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "sourceMap": true,
        "outDir": "lib",
        "noImplicitAny": true,
        "declaration": true,
        "declarationMap": true,
        "lib": [
            "esnext"
        ],
        "types": [
            "jest",
            "node" // This is so we can use things like Buffer.
        ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}